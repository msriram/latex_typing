% Variadic Macro for Slokas
\newcount\linenum
\newcommand{\GobbleListArg}[1]{\advance\linenum by 1 \\ \vspc \ifodd \number\linenum \dspc \else \sspc \fi #1\SlokaLine}
\newcommand{\SlokaLine}{\csname @ifnextchar\endcsname\bgroup{\GobbleListArg}{ \space||\space\countr\space|| \\ \vspc \end{quote}}}
